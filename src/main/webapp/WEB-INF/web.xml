<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">
    <servlet>
        <servlet-name>AccountServlet</servlet-name>
        <servlet-class>com.application.cab_application.Servlets.AccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountServlet</servlet-name>
        <url-pattern>/accounts/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AccountDetailsServlet</servlet-name>
        <servlet-class>com.application.cab_application.Servlets.AccountDetailsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountDetailsServlet</servlet-name>
        <url-pattern>/account_details/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DriverDetailsServlet</servlet-name>
        <servlet-class>com.application.cab_application.Servlets.DriverDetailsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DriverDetailsServlet</servlet-name>
        <url-pattern>/driver_details/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LocationServlet</servlet-name>
        <servlet-class>com.application.cab_application.Servlets.LocationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LocationServlet</servlet-name>
        <url-pattern>/location/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RideServlet</servlet-name>
        <servlet-class>com.application.cab_application.Servlets.RideServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RideServlet</servlet-name>
        <url-pattern>/ride/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>DriverRideServlet</servlet-name>
        <servlet-class>com.application.cab_application.Servlets.DriverRideServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DriverRideServlet</servlet-name>
        <url-pattern>/driver_rides/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RiderRideServlet</servlet-name>
        <servlet-class>com.application.cab_application.Servlets.RiderRideServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RiderRideServlet</servlet-name>
        <url-pattern>/rider_rides/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PaymentServlet</servlet-name>
        <servlet-class>com.application.cab_application.Servlets.PaymentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PaymentServlet</servlet-name>
        <url-pattern>/payments/*</url-pattern>
    </servlet-mapping>
</web-app>